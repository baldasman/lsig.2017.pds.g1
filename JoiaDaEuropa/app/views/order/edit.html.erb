<div class="form-group col-md-5" style="margin-left: 27%;">

  <div>
    <p class="bg-danger">
      <%= @errors %>
    </p>
  </div>


  <%= form_for :order, url: order_update_url(:id => @order.id) do |o| %>


      <div class="panel panel-default">
        <div class="panel-body ">

          <p> <h4 class="bg-info">Editar pedido #<%= @order.id %></h4></p>
           <label class="col-2 col-form-label">Delivery Date</label>
           <div class="col-10">
             <%= o.text_field :delivery_date, :class => "form-control" %>
           </div>

           <label class="col-2 col-form-label">Price</label>
           <div class="col-10">
             <%= o.text_field :price, :class => "form-control" %>
           </div>

           <label class="col-2 col-form-label">Comment</label>
           <div class="col-10">
             <%= o.text_area :client_comment, :class => "form-control" %>
           </div>

          <label class="col-2 col-form-label">Attachment</label>
          <div class="col-10">
            <%= o.file_field :attachment, :url =>{:action => 'new'}, :html => {:multipart => true}, :class => "form-control" %>
          </div><br>

          <% if @profile.account_type == 2 %>
              <label class="col-2 col-form-label">Status</label>
              <div class="col-10">

                <%= o.collection_select :status_id, Estado.all, :id, :name %>
              </div><br>
          <% end %>
          <%= o.submit %>
    <% end %>
    </div>
</div>
</div>