<div class="panel panel-default">
  <div class="panel-body">
    <h1 class="bg-info">Pedido #<%= @order.id %>- Cadastrado no sistema</h1>
    <table class="table">
      <thead>
      <tr>
        <th>Preço</th>
        <th>Status</th>
        <th>Comentário</th>
        <th>Data de entrega</th>
        <th>Anexo</th>
      </thead>
      <tbody>
      <tr>
        <td>$<%= @order.price %></td>
        <% if @order.status_id == 1 %>
            <td>Pendente</td>
        <% elsif @order.status_id == 2 %>
            <td>Em andamento</td>
        <% elsif @order.status_id == 3 %>
            <td>Finalizado</td>
        <%else%>
            <td>Rejeitado</td>
        <%end%>
        <td><%= @order.client_comment %></td>
        <td><%= @order.delivery_date %></td>
        <td><%= @order.attachment %></td>
        <br/>
      </tr>
      </tbody>
    </table>

    <%= link_to "Voltar as Encomendas", listar_path, :class => "btn btn-warning btn-sm" %>
  </div>
</div>