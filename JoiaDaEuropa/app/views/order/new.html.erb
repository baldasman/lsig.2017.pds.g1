
<div class="form-group col-md-5" style="margin-left: 27%;">

  <div>
    <p class="bg-danger">
      <%= @errors %>
    </p>
  </div>

  <%= form_for :order, url: order_create_path do |o| %>

      <div class="panel panel-primary">
        <div class="panel-heading">
          <h4>Novo pedido</h4></div>
        <div class="panel-body">
          <label>Data entrega (YYYY/MM/DD)</label>
          <div class="col-10">
            <%= o.text_field :delivery_date, :class => "form-control" %>
          </div>

          <label class="col-2 col-form-label">Valor</label>
          <div class="col-10">
            <%= o.text_field :price, :class => "form-control" %>
          </div>

          <label class="col-2 col-form-label">Descrição</label>
          <div class="col-10">
            <%= o.text_area :client_comment, :class => "form-control" %>
          </div>

          <label class="col-2 col-form-label">Arquivo</label>
          <div class="col-10">
            <%= o.file_field :attachment, :url => {:action => 'new'}, :html => {:multipart => true}, :class => "form-control" %>
          </div>
          <br>
          <%= o.submit%><br/><br/>
          <%= link_to "Voltar as Encomendas", listar_path, :class => "btn btn-warning btn-sm" %>
        </div>
  <% end %>
  </div>
</div>
</div>