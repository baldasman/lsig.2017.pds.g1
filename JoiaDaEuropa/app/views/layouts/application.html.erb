        <%= link_to "Inicio", inicio_path %>
        <%= link_to "Perfil", perfil_path %>
        <%= link_to "Encomendas", listar_path %>
      <% end %>
  </div>
  <div id="rightHeader">
    <div class="row">
      <div class="col-sm-12 text-right">
        <div class="col-sm-10 text-right">
      <%= link_to 'PT', '/?lang=pt', :class => "btn btn-info" %>
      <span>|</span>
      <%= link_to 'EN', '/?lang=en', :class => "btn btn-info" %>
        </div>
        <div class="col-sm-2">
      <% if current_user %>
          <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete, :class => "btn btn-danger", :glyph => :home %>
      <% else %>
          <%= link_to 'Sign In', new_user_session_path, :class => "btn btn-success" %>
      <% end %>
        </div>
    </div>
    </div>
    <%= yield %>
  </div>
</div>

