<div class="form-group col-md-5" style="margin-left: 29%;">



  <div>
    <p class="bg-danger"> <%= @errors %> </p>
  </div>
  <div class="panel panel-primary">
    <div class="panel-heading">Editar Perfil</div>
    <div class="panel-body" style="margin: 10px;">
      <% if flash[:notice].present? %>
          <p class='bg-success text-center'><%= flash[:notice] %></p>
      <% end %>
      <div class="form-horizontal">
        <%= form_for :profiles, url: profile_update_path do |p| %>

            <div class="form-group">
              <label for="nickname" class="col-2 col-form-label">E-mail</label>
              <div class="col-10">
                <input type="text" class="form-control disabled" value=<%= @profile.name%> disabled>
              </div>
            </div>

            <div class="form-group">
              <label for="nickname" class="col-2 col-form-label">Nome</label>
              <div class="col-10">
                <%= p.text_field :nickname, value: @profile.nickname, :class => "form-control", :maxlength => 40 %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-2 col-form-label">Sexo</label>
              <div class="col-10">
                <div class="radio">
                  <label>
                    <%= p.radio_button :gender, "1", :checked => @profile.gender == 1 %>Masculino
                  </label>
                </div>
                <div class="radio">
                  <label>
                    <%= p.radio_button :gender, "0", :checked => @profile.gender == 0 %>Feminino
                  </label>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="email" class="col-2 col-form-label">Data Nascimento (YYYY-MM-DD) </label>
              <div class="col-10">
                <%= p.text_field :birth, value: @profile.birth, :class => "form-control", :maxlength => 10 %>
              </div>
            </div>

            <div class="form-group">
              <label for="tel" class="col-2 col-form-label">Telefone</label>
              <div class="col-10">
                <%= p.text_field :telephone, value: @profile.telephone, :class => "form-control", :maxlength => 9 %>
              </div>
              <br>
              <div class="text-center">
              <%= p.submit :class => 'btn btn-success'%>
              </div>
            </div>
            <%= link_to "Voltar ao inicio", inicio_path, :class => "btn btn-warning btn-sm" %>
      </div>
    </div>
  </div>
    <% end %>


</div>

